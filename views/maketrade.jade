extends layout

block content
  .container
    h2 Trade Form
    form#formSubmitTrade(name="submittrade",method="post",action="/maketrade")
        p Title of Trade:
        .form-group
            input#inputTradeTitle(type="text", placeholder="", name="tradetitle")
        p Item(s) Up for Trading:
        .form-group
            input#inputTradeItems(type="text", placeholder="", name="tradeitems")
        p Item(s) Requesting:
        .form-group
            input#inputTradeReq(type="text", placeholder="", name="tradereq")
        p Trade Description:
        .form-group
            input#inputTradeDesc(type="text", placeholder="", name="tradedesc")  
        button.btn.btn-default(type='submit') Submit
        a(href='/')
    br
    a(href='/'): button.btn.btn-primary(type="button") Cancel