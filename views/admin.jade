extends layout

block content
  header(role='banner')
    hgroup
        h1
            a(href='/'): img(src='/images/logo.jpg')    
            <strong>A4 CRUD App</strong>
        if(user)
            if (!user.displayname)
                h2 Welcome #{user.username}!
            if (user.displayname)    
                h2 Welcome #{user.displayname}!
  h2 Accounts
  ul
    each val in accounts
      form(action='/admin', method='post')
        span= val.username + ", " + val.displayname
        br
        button.btn.btn-sm(name='_id', value=val._id) Edit Account
      br
  h3 Trades
  ul
    each val in trades
      form(action='admin2', method='post')
        span= val.title
        br
        button.btn.btn-sm(name='_id', value=val._id) Edit Trade
      br
  br
  p= info