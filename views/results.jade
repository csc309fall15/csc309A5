extends layout

block content
  header(role='banner')
    hgroup
        h1
            a(href='/'): img(src='/images/logo.jpg')    
            <strong>A4 CRUD App</strong>
  h2 Results
  ul
    each val in trades
      form(action='/tradelist', method='post')
        span= val.title
        br
        button(name='_id', value=val._id) View Trade
      br
  br
