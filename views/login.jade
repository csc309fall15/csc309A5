extends layout

block content
  .container
    h1 Login Page
    p.lead Come on in!
    a(href='/auth/facebook'): img(src='/images/login-with-facebook.png')
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    h4= info
