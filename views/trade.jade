extends layout

block content
  header(role='banner')
    hgroup
        h1
            a(href='/'): img(src='/images/logo.jpg')    
            <strong>A4 CRUD App</strong>
        if(user)
            if (!user.displayname)
                h2 #{user.username}'s Profile
            if (user.displayname)    
                h2 #{user.displayname}'s Profile
    a(href='/upload'): img(src='/images/default.jpg', height='100', width='100')             
    br
    br
    p Title: #{info.title}
    p Item(s) Requested: #{info.itemReq}
    p Item(s) For Trade: #{info.itemGive}
    p Description: #{info.desc} 
    a(href='/tradelist') 
        p Back              